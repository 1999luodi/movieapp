.detail {
  position: relative;
  top: 0;
}

.backimg {
  width: 100%;
  height: 100%;
}

.backimg image {
  width: 100%;
  height: 100%;
}

.book:nth-child(2) image {
  height: 120%;
  width: 100%;
}
.book:nth-child(2) .detail{
    margin-top: -60rpx;
}

.detail {
  position: relative;
  top: 0rpx;
  padding: 10rpx 10rpx;

  height: 260rpx;
  width: 100%;
  background-color: rgba(128, 127, 132, 0.7);
  border-radius: 10rpx;
}

.detail view {
  color: whitesmoke;
  height: 50rpx;
  width: 300rpx;
  font-size: medium;

  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;

}

.detail text {
  font-size: small;
}

.detailtap {

  animation: topto 0.5s linear 1;
  top: -160rpx;
}

@keyframes topto {
  from {
    top: 0rpx;
  }

  to {
    top: -160rpx;
  }
}